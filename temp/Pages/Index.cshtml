@page
@model Authentication.Auth.API.IndexModel
@{
}
@if (Model.Name == null || Model.Name == "")
{
    <a href="/Authorization">sign in</a>
    <a href="/Registration">sign up</a>
}
else
{
    <h1>Hi @Model.Name</h1>
    <form method="POST">
        <input type="submit" asp-page-handler="Exit" value="Exit" />
        @Html.AntiForgeryToken()
    </form>
    <a asp-controller="DownloadBots" asp-action="DownloadBots" download><button type="button">Download .NET Bots ZIP</button></a>


}

