@page
@model Authentication.Auth.API.IndexModel
@{
}
@if (Model.Name == null || Model.Name == "")
{
    <a href="/Authorization">sign in</a>
    <a href="/Registration">sign up</a>
}
else
{
    <h1>Hi @Model.Name</h1>
    <form method="POST">
        <input type="submit" asp-page-handler="Exit" value="Exit" />
        @Html.AntiForgeryToken()
    </form>
    @using (Html.BeginForm("DownloadBots", "Download", FormMethod.Post))
    {
        <div>SUBD</div>
        <select name="DBType">
            <option value="MSSQL">MSSQL</option>
            <option value="SQLite">SQLite</option>
        </select>
        <div>Database</div>
        <input type="text" name="Connection" />
        <input type="submit" />
    }
}

